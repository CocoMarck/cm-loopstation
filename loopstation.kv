#:kivy 2.3.1

<LoopstationWindow>:
    record_button: record
    label_timer: timer_text
    label_tracks: tracks_text
    label_compass_to_record: compass_to_record

    label_bpm: text_bpm
    textinput_bpm: input_bpm


    grid_tracks: track_container

    button_play: play
    button_stop: stop
    button_restart: restart

    togglebutton_automatic_stop: automatic_stop
    textinput_compass_to_stop: compass_to_stop

    textinput_timer: timer_input

    metronome_container: metronome_box

    GridLayout:
        x: 0
        y: root.height*0.72
        width: root.width*1
        height: root.height*0.25

        cols: 3

        # Fila uno
        ## timer
        BoxLayout:
            orientation: "horizontal"
            Label:
                id: timer_text
                text: "timer"
            TextInput:
                id: timer_input

        ## Nombre
        Label:
            text: "loopstation application"

        ## tracks
        Label:
            id: tracks_text
            text: "tracks 0"

        # Fila 2
        ## compases a grabar
        BoxLayout:
            orientation: "horizontal"
            Label:
                id: compass_to_record
                text: "compasses to record"

            TextInput:
                id: compass_to_stop
                text: "0"

        ## circulos del Metronomo
        BoxLayout:
            id: metronome_box
            orientation: "horizontal"

        # nada
        BoxLayout:
            orientation: "horizontal"
            Label:
                id: text_bpm
                text: "bpm"
            TextInput:
                id: input_bpm
                text: "0"



    # Widgets
    BoxLayout:
        orientation: "vertical"
        width: root.width*1.0
        height: root.height *0.2

        center_x: root.width * 0.5
        y: root.height * 0.5

        # Opciones de grabación
        BoxLayout:
            orientation: "horizontal"

            # Grabar
            ToggleButton:
                id: record
                text: "record"

            # Opcion Parar grabación por numero de compass
            ToggleButton:
                id: automatic_stop
                text: "stop by number of compass"

        # Opciones de reproducción de tracks
        BoxLayout:
            orientation: "horizontal"

            Button:
                id: play
                text: 'play'

            Button:
                id: stop
                text: 'stop'

            Button:
                id: restart
                text: 'restart'




    # Scroll | Contenedor de Pistas
    ScrollView:
        do_scroll_x: True
        do_scroll_y: True

        width: root.width*1
        height: root.height * 0.44

        center_x: root.width * 0.5
        y: root.height * 0.0475

        # CheckBox Tracks
        GridLayout:
            id: track_container
            cols: 6

            Label:
                text: "here are all the tracks"

            BoxLayout:
                orientation: "horizontal"
